<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffedc"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/login_relayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/Regis_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/loginback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:textColor="#666"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/awq_rl_vpc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:layerType="software">

        <android.support.v4.view.ViewPager
            android:id="@+id/regis_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:clipChildren="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="180dp">

            <TextView
                android:id="@+id/lunbo_dot1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/icon_back_blue"/>
            <TextView
                android:id="@+id/lunbo_dot2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_back_write" />
            <TextView
                android:id="@+id/lunbo_dot3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/icon_back_write"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/start_zhuce"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <Button
                android:id="@+id/regidtered"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonbackground"
                android:text="立即注册"
                android:clickable="true"
                android:textColor="#fff"
                android:textSize="16dp"
                android:gravity="center"
                />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
