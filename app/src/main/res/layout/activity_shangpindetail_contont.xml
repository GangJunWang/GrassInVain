<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/speak_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/chanpintu"
            app:riv_corner_radius="@dimen/dp60" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/speak_image"
            android:layout_toRightOf="@+id/speak_image"
            android:layout_toEndOf="@+id/speak_image"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/speak_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:text="2017-02-22"/>
    </LinearLayout>

    <TextView
        android:id="@+id/speak_contont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#333"
        android:textSize="15dp"
        android:maxEms="30"
        android:text="宝贝到了，量也很足。特别是发货快 ，早上睁眼下单，起床吃完饭就到了，一级棒"/>
</LinearLayout>