<?xml version="1.0" encoding="utf-8"?>
<bluetooth.inuker.com.grassinvain.common.widget.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wjg="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@mipmap/cehuabeijing"
    android:scrollbars="none"
    wjg:rightPadding="80dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <include layout="@layout/layout_menu" />

        <FrameLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/change_type_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f9f9f9"
                android:layout_weight="1">

            </FrameLayout>
            <RelativeLayout
                android:id="@+id/titlt_back_contron"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:background="#fff"
                android:layout_height="38dp">

                <ImageView
                    android:id="@+id/startcehua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/daohangs" />

                <TextView
                    android:id="@+id/title_drawable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="3dp"
                    android:text="商品列表" />

                <ImageView
                    android:id="@+id/srarch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/seach" />
                <TextView
                    android:id="@+id/bianji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:textColor="#000"
                    android:text="编辑"/>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>


</bluetooth.inuker.com.grassinvain.common.widget.SlidingMenu>
