<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dip"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp10"
    android:paddingRight="@dimen/dp10"
    android:paddingLeft="@dimen/dp10">

    <RelativeLayout
        android:id="@+id/zhifubao"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="支付宝支付" />

        <ImageView
            android:id="@+id/zhifubao_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/xuanzhong" />
    </RelativeLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/weixin"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="微信支付" />

        <ImageView
           android:id="@+id/weixin_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/weixuan" />
    </RelativeLayout>

    <Button
        android:id="@+id/queren"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/zhuticolor"
        android:text="确认支付" />

</LinearLayout>