<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_evaluation_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单处理"
            android:textSize="16dp"
            android:textColor="#999" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/loginback"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/evaluation_recycView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.RecyclerView>

    <bluetooth.inuker.com.grassinvain.common.widget.MyEditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="clip_horizontal"
        android:hint="有什么想表达和吐槽的，尽管来吧~ （0~100字）"
        android:id="@+id/myEditText"
        android:textSize="12dp"
        android:layout_below="@+id/evaluation_recycView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/request_submit_recycView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tijiao_speak"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:textSize="14dp"
        android:textColor="#fff"

        android:gravity="center"
        android:text="发表评论"
        android:background="@color/zhuticolor"
        />

</RelativeLayout>
