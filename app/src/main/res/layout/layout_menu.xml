                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textSize="16dp"
                android:text="购物车"/>
            <TextView
                android:id="@+id/cehuaitem2xian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:visibility="invisible"
                android:background="@color/zhuticolor"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cehuaitem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cehuaitem3image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/personweixun"/>
            <TextView
                android:id="@+id/cehuaitem3text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textSize="16dp"
                android:text="个人中心"/>
            <TextView
                android:id="@+id/cehuaitem3xian"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="invisible"
                android:layout_marginLeft="15dp"
                android:background="@color/zhuticolor"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cehuaitem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cehuaitem4image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/messageweixuan"/>
            <TextView
                android:id="@+id/cehuaitem4text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textSize="16dp"
                android:text="消息"/>
            <TextView
                android:id="@+id/cehuaitem4xian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16dp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginLeft="150dp"
                android:background="@drawable/textbackgreen"/>
