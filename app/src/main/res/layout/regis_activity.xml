<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/zhucebacka"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:text="手机认证" />

        <bluetooth.inuker.com.grassinvain.common.widget.MyEditText
            android:id="@+id/tuiijanren"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:gravity="center"
            android:hint="推荐人号码"
            android:singleLine="true"
            android:textColorHint="#999"
            android:background="@drawable/edittextback"
            android:textSize="12dp" />
        <bluetooth.inuker.com.grassinvain.common.widget.MyEditText
            android:id="@+id/zijiren"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
           android:inputType="number"
            android:gravity="center"
            android:hint="输入手机号"
            android:singleLine="true"
            android:textColorHint="#999"
            android:background="@drawable/edittextback"
            android:textSize="12dp" />
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginTop="26dp">
            <bluetooth.inuker.com.grassinvain.common.widget.MyEditText
                android:id="@+id/yanzhegnma"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:gravity="center"
                android:hint="输入验证码"
                android:singleLine="true"
                android:textColorHint="#999"
                android:layout_marginLeft="2dp"
                android:background="@drawable/edittextback"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/send_yanzhegnma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/zhuticolor"
                android:textSize="12dp"
                android:text="获取验证码"/>
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
