<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_pick_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_16"
            android:layout_marginRight="@dimen/common_activity_padding_16"
            android:layout_marginTop="@dimen/common_activity_padding_16"
            android:background="@drawable/slt_as_ios7_other_bt_top"
            android:text="从相册选择"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_16"
            android:layout_marginRight="@dimen/common_activity_padding_16"
            android:background="@drawable/slt_as_ios7_other_bt_bottom"
            android:text="拍照"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="@dimen/common_activity_padding_16"
            android:layout_marginRight="@dimen/common_activity_padding_16"
            android:layout_marginTop="15dip"
            android:background="@drawable/slt_as_ios7_cancel_bt"
            android:text="取消"
            android:textStyle="bold"
            />
    </LinearLayout>
</RelativeLayout>